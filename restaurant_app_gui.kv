Screen:
    id: restaurant_screen
    name: 'restaurantScreen'
    MDCard:
        size_hint: None, None
        size: 900, 700
        padding: [0, 200, 0, 20]
        pos_hint: {"center_x" : 0.5, "center_y" : 0.5}
        orientation: 'vertical'


        MDBoxLayout:
            id: general_box_layout
            size_hint_y: None
            height: self.minimum_height
            orientation: 'horizontal'
            padding: [50,0,0,0]

            MDBoxLayout:
                id: text_field_box_layout
                padding: 10
                spaicing: 10
                orientation: 'vertical'
                MDTextField:
                    id: id_text_field
                    hint_text: 'Enter ID'
                MDTextField:
                    id: name_text_field
                    hint_text: 'Enter Name'
                MDTextField:
                    id: price_text_field
                    hint_text: 'Enter Price' 
            MDBoxLayout:
                id: buttton_box_layout
                padding: dp(10)
                spaicing: dp(10)
                orientation: 'vertical'
                MDRectangleFlatButton:
                    text: 'Add'
                    on_release: app.add_product()
                MDRectangleFlatButton:
                    text: 'Update'
                    on_release: app.add_product() 
                MDRectangleFlatButton:
                    text: 'Delete'
                    on_release: app.add_product()       